<style>
    /* Configurações de Cores e Fontes */
:root {
    --gold: #C5A059;
    --gold-hover: #e2ba6d;
    --dark-bg: #0D0D0D;
    --card-bg: #1A1A1A;
}

/* Efeito na Nav */
.navbar-nav .nav-link {
    transition: color 0.3s ease;
    position: relative;
    color: white !important;
}

.btn-login, .btn-registro {
    padding: 8px 25px;
    border-radius: 0; /* Mantendo o padrão quadrado da sua barbaearia */
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-block;
    cursor: pointer;
    font-family: 'Montserrat', sans-serif;
    text-transform: uppercase;
    font-size: 0.85rem;
}

/* Login: Fundo Escuro com Borda Dourada */
.btn-login {
    color: var(--gold);
    background-color: transparent;
    border: 1px solid var(--gold);
}

/* Registro: Fundo Dourado (Destaque) */
.btn-registro {
    background-color: var(--gold);
    color: #0D0D0D;
    border: 1px solid var(--gold);
}

/* --- EFEITOS DE HOVER --- */

.btn-login:hover {
    background-color: var(--gold);
    color: #0D0D0D;
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(197, 160, 89, 0.3);
}

.btn-registro:hover {
    background-color: var(--gold-hover);
    border-color: var(--gold-hover);
    transform: translateY(-3px);
    box-shadow: 0 5px 15px rgba(197, 160, 89, 0.4);
}

.btn-login:active, .btn-registro:active {
    transform: translateY(-1px);
}

.navbar-nav .nav-link::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: var(--gold);
    transition: width 0.3s ease;
}

.navbar-nav .nav-link:hover::after {
    width: 100%;
}

.navbar-nav .nav-link:hover {
    color: var(--gold) !important;
}

/* Efeito nos Cards */
.custom-card {
    transition: transform 0.4s ease, box-shadow 0.4s ease, border-color 0.4s ease !important;
    cursor: pointer;
    overflow: hidden;
}

.custom-card:hover {
    transform: translateY(-10px);
    box-shadow: 0px 10px 25px rgba(197, 160, 89, 0.2);
    border-color: var(--gold) !important;
}

/* Efeito de Zoom na Imagem do Card */
.custom-card .card-img-top {
    transition: transform 0.5s ease;
}

.custom-card:hover .card-img-top {
    transform: scale(1.1);
}

/* Botão de Agendamento */
.btn-agendar {
    background-color: var(--gold);
    color: #000;
    font-weight: bold;
    border-radius: 0;
    padding: 10px 30px;
    margin-top: 20px;
    transition: all 0.3s ease !important;
}

.btn-agendar:hover {
    background-color: var(--gold-hover) !important;
    transform: scale(1.05);
    box-shadow: 0px 0px 20px rgba(197, 160, 89, 0.4);
}

</style>

